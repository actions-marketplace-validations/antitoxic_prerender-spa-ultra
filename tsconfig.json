  "extends": "@tsconfig/node16",
  "compilerOptions": {
    "lib": ["es2021", "dom"],
    "strictNullChecks": true,
    "noImplicitAny": true,
    "declaration": true,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"]
}
